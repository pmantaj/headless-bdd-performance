<div class="row">
  <h2 class="text-center">Customer Profile</h2>
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= "#{@customer.last_name} #{@customer.first_name}" %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
         <!-- <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> </div>-->
          <div class="col-md-3 col-lg-3 " align="center"> <img alt="<%= "#{@customer.first_name} #{@customer.last_name}" %>" src="<%= image_path('anonymous.png') %>" class="img-circle img-responsive"> </div>

          <div class=" col-md-9 col-lg-9 ">
            <table class="table table-user-information">
              <tbody>
              <tr>
                <td>First Name:</td>
                <td><%= @customer.first_name %></td>
              </tr>
              <tr>
                <td>Last Name:</td>
                <td><%= @customer.last_name %></td>
              </tr>
              <tr>
                <td>Company:</td>
                <td><%= @customer.organisation_name %></td>
              </tr>

              <tr>
              <tr>
                <td>Country:</td>
                <td><%= @customer.country %></td>
              </tr>
              <tr>
                <td>Region:</td>
                <td><%= @customer.region %></td>
              </tr>
              <tr>
                <td>City:</td>
                <td><%= @customer.city %></td>
              </tr>
              <tr>
                <td>Postal Code:</td>
                <td><%= @customer.postal_code %></td>
              </tr>
              <tr>
                <td>Address:</td>
                <td><%= @customer.address_code %></td>
              </tr>
              <tr>
                <td>Email:</td>
                <td><a href="<%= 'mailto:#{@customer.email}' %>"><%= @customer.email %></a></td>
              </tr>
              <td>Phone Number:</td>
              <td><%= @customer.phone %></td>

              </tr>

              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <%= link_to root_url, method: :get, class: "btn btn-sm btn-primary" do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
        <% end %>
        <span class="pull-right">
          <%= link_to edit_customer_path, method: :get, class: "btn btn-sm btn-warning" do %>
              <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <button data-title='Delete' data-method='delete' data-toggle='modal' data-target='#delete' data-email='<%= @customer.email %>' data-url='<%= customer_path(@customer) %>' class="btn btn-sm btn-danger">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </span>
      </div>

    </div>
  </div>
</div>

<%= render  "shared/modal_crud" %>